<!-- create form to take in information for a new job -->
<!-- form handling -->
<form action="/api/jobs" method="POST" id="add_job">
  <div class="new_job">
    <div class="form-group">
      <label for="job" class="text-light">Job Title</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="job" value="" placeholder="Update Views" />
    </div>
    <div class="form-group">
      <label for="description" class="text-light">Description</label>
      <input
        type="text"
        name="description"
        value=""
        placeholder="update the view in the index.ejs file"
      />
    </div>
    <div class="form-group">
      <label for="location" class="text-light">Location</label>
      <input type="text" name="location" value="" placeholder="Cape Town" />
    </div>
    <div class="form-group">
      <label for="priority" class="text-light">Priority</label>
      <div class="radio inline">
        <input type="radio" id="radio-1" name="priority" value="High" />
        <label for="radio-1" class="radio-label">High</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-2" name="priority" value="Medium" />
        <label for="radio-2" class="radio-label">Medium</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-3" name="priority" value="Low" />
        <label for="radio-3" class="radio-label">Low</label>
      </div>
    </div>
    <div class="form-group">
      <label for="status" class="text-light">Status</label>
      <div class="radio inline">
        <input type="radio" id="radio-4" name="status" value="Submitted" />
        <label for="radio-4" class="radio-label">Submitted</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-5" name="status" value="In Progress" />
        <label for="radio-5" class="radio-label">In Progress</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-6" name="status" value="Complete" />
        <label for="radio-6" class="radio-label">Complete</label>
      </div>
    </div>
    <!-- test -->
    <div class="form-group">
      <label for="archive" class="text-light">Archive</label>
      <div class="radio inline">
        <input type="radio" id="radio-7" name="archived" value="Archive" />
        <label for="radio-7" class="radio-label">Archive</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-8" name="archived" value="Unarchive" />
        <label for="radio-8" class="radio-label">Unarchive</label>
      </div>
    </div>
    <!-- /test -->
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
<!-- /form handling -->
