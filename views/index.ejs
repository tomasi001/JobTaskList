<!-- include header -->
<%- include("include/_header") %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-start">
      <!-- create button to go to add job route -->
      <a href="/add-job" class="border-shadow">
        <span class="text-gradient">
          New Job
          <i class="fa fa-briefcase" aria-hidden="true"></i>
        </span>
      </a>
      <!-- create button to go to archive route -->
      <a href="/archive" class="border-shadow">
        <span class="text-gradient">
          View Archive
          <i class="fa fa-archive" aria-hidden="true"></i>
        </span>
      </a>
      <!-- create button to go to sort status route -->
      <a href="/sort-status" class="border-shadow">
        <span class="text-gradient">
          Sort By Status
          <i class="fa fa-check" aria-hidden="true"></i>
        </span>
      </a>
      <!-- create button to go to status update route -->
      <a href="/status-update" class="border-shadow">
        <span class="text-gradient">
          Batch Status Update
          <i class="fa fa-clone" aria-hidden="true"></i>
        </span>
      </a>
    </div>
    <br />
    <hr />
    <br />
    <div class="box-nav d-flex justify-end">
      <!-- create button to go to filter complete route -->
      <a href="/filter-Complete" class="border-shadow">
        <span class="text-gradient">
          Filter By Complete
          <i class="fa fa-filter" aria-hidden="true"></i>
        </span>
      </a>
      <!-- create button to go to filter submitted route -->
      <a href="/filter-Submitted" class="border-shadow">
        <span class="text-gradient">
          Filter By Submitted
          <i class="fa fa-filter" aria-hidden="true"></i>
        </span>
      </a>
      <!-- create button to go to filter in progress route  -->
      <a href="/filter-InProgress" class="border-shadow">
        <span class="text-gradient">
          Filter By In Progress
          <i class="fa fa-filter" aria-hidden="true"></i>
        </span>
      </a>
    </div>
    <div class="form-title text-center">
      <span class="text-light"
        >The Table is Currently Sorted By Newest Date of Submission</span
      >
    </div>

    <!-- form handling -->

    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Job Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- include show -->
          <%- include("include/_show") %>
          <!-- /include show -->
        </tbody>
      </table>
    </form>
    <!-- /form handling -->
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include("include/_footer") %>
<!-- /include footer -->
